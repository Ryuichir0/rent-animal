<h1>Edit a herd</h1>

<%= form_for(@herd) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :type %>
  <%= f.text_field :type %>
  <%= f.label :unit_price %>
  <%= f.number_field :unit_price %>
  <%= f.submit %>
<% end %>
