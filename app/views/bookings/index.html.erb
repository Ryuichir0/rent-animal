
<div class="container">
    <h1>Bookings</h1>
      <% @bookings.each do |booking| %>
        <% if booking.herd_id == @herd.id %>
          <div class="card-trip">
            <p>Name: <%= booking.herd.name %></p>
            <p>ID: <%= booking.id %></p>
            <p>check_in: <%= booking.check_in %></p>
            <p>check_out: <%= booking.check_out %></p>
            <p>Total Amount <%= booking.amount %> â‚¬</p>
            <%= link_to icon('fas fa-pen', 'edit'), edit_herd_booking_path(@herd, booking.id) %>
            <%= link_to icon('fas fa-trash', 'remove'), booking_path(booking), method: :delete, data: { confirm: "Are you sure?" } %>
          </div>
        <% end %>
      <% end %>
    <%= link_to 'Dashboard', herds_path,  class: "btn btn-flat"  %>
</div>
