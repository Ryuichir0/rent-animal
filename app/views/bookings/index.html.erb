
<div class="container">
    <h1>Bookings</h1>
      <% @bookings.each do |booking| %>
        <div class="card-trip">
          <p>Name: <%= booking.herd.name %></p>
          <p>ID: <%= booking.id %></p>
          <p>check_in: <%= booking.check_in %></p>
          <p>check_out: <%= booking.check_out %></p>
          <p>Amount <%= booking.amount %> â‚¬</p>
          <%= link_to "Remove",
                  booking_path(booking),
                  method: :delete,
                  data: { confirm: "Are you sure?" } ,  class: "btn btn-flat" %>
        </div>
      <% end %>
    <%= link_to 'Home', root_path,  class: "btn btn-flat"  %>
    <%= link_to 'Dashboard', herds_path,  class: "btn btn-flat"  %>
</div>
