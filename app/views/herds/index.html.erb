<h1>Herds</h1>
<p>Welcome in our world of pure nature</p>
<div class="wrapper">
  <div class="col-cards">
    <% if @herds %>
      <% @herds.each do |herd| %>
        <%= link_to herd_path(herd), :action => 'go' do %>
          <div class="card-trip">
            <%= image_tag ('horses.jpg') %>
              <div class="card-trip-infos">
                <div>
                  <h2><%= herd.name %></h2>
                  <p><%= herd.species %></p>
                  <p> <%= herd.description %><p>
                </div>
                <h2 class="card-trip-pricing"><%= herd.unit_price %> â‚¬</h2>
                <%= image_tag ('avatar.JPG'), :class => "card-trip-user avatar-bordered" %>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
    <div class="col-map">
      <div id="map"
        style="width: 100%; height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>
  </div>
</div>
<%= link_to 'Create a herd', new_herd_path,  class: "btn btn-flat"  %>
<ul>
  <% current_user.bookings.each do |booking| %>
  <li> <%= booking.check_in%></li>
  <li> <%= booking.check_out%></li>
  <li> <%= booking.amount%></li>
  <li> <%= booking.user_id%></li>
  <li> <%= booking.herd_id%></li>
</ul>
<% end %>
